@model IEnumerable<MvcBlog.Models.Makale>

@{
    ViewBag.Title = "KategoriMakale";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using GridMvc.Html
<link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"> </script>
<script src="~/Content/vendor/jquery/jquery.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h2>KategoriMakale</h2>


@Html.Grid(Model).Columns(columns =>
   {
       columns.Add(foo => foo.Kategori.KategoriAdi).Titled("Kategori adı").SetWidth(110).Sortable(true).Filterable(true);
       columns.Add(foo => foo.Baslik).Sortable(true).Filterable(true);
       columns.Add(foo => foo.Tarih).Sortable(true).Filterable(true);
       columns.Add(foo => foo.Okunma).Sortable(true).Filterable(true);
   }).WithPaging(3)




