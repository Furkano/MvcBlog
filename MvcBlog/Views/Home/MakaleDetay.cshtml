@model MvcBlog.Models.Makale

@{
    ViewBag.Title = "MakaleDetay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<style>
    .tag {
        background-color: beige;
    }
</style>
<div class="col-md-8">

    <!-- Title -->
    <h1 class="mt-4">@Model.Baslik</h1>
    <!-- Author -->
    <p class="lead">
        <img src="@Model.Uye.Foto" class="img-circle" alt="@Model.Uye.AdSoyad" width="75" />
        by
        <a href="/Home/UyeProfil/@Model.Uye.Uyeid">@Model.Uye.KullaniciAdi</a>
    </p>
    <hr>
    <!-- Date/Time -->
    <p class="glyphicon glyphicon-time">@string.Format("{0: MMMM yyyy}", Model.Tarih) | <span class="glyphicon glyphicon-edit"></span>@Model.Kategori.KategoriAdi (@Model.Kategori.Makales.Count()) <span class="glyphicon glyphicon-send"></span> @Model.Yorums.Count()</p>
    <hr>
    <!-- Preview Image -->
    <img class="img-fluid rounded" src="@Model.Foto" alt="@Model.Uye.Mail">
    <hr>
    <!-- Post Content -->
    <p class="lead">
        @Html.Raw(Model.Icerik)
    </p>
    <div class="well">
        @foreach (var item in Model.Etikets)
        {
            <span class="tag glyphicon glyphicon-tag"> @item.EtiketAdi,</span>
        }
    </div>

    @if (Session["uyeid"] != null)
    {
    <!-- Comments Form -->
        <div class="card my-4">
            <h5 class="card-header">Yorumlar</h5>
            <div class="card-body">
                <form>
                    <div class="form-group">
                        <textarea id="yorum" typeof="text" class="form-control" rows="3"></textarea>
                    </div>
                    <button type="submit" id="gonder" class="btn btn-primary">Yorum Yap</button>
                </form>
            </div>
        </div>
    }
    else
    {
        <h2>Makaleye yorum yapabilmek için üye girişi yapmalısınız.</h2>
        <p><a href="/Uye/Login">Giriş yap</a></p>
    }
    <!-- Single Comment -->
    <div class="media mb-4">
        @foreach (var item in Model.Yorums.ToList())
        {
            
                <div class="well-lg">
                    <img class="d-flex mr-3 rounded-circle" width="75" src="@item.Uye.Foto" alt="@item.Uye.AdSoyad">
                    <div class="media-body">
                        <h5 class="mt-0">
                            @item.Uye.KullaniciAdi
                            <small>@item.Tarih</small>
                        </h5>
                        @item.Icerik @if (Convert.ToInt32(Session["uyeid"]) == item.UyeID)
                        {
                            <a class="btn btn-danger" href="/Home/YorumSil/@item.Yorumid">Sil</a>
                        }
                    </div>
                </div>
            
        }
        

    </div>

</div>

<script src="~/Content/vendor/jquery/jquery.js"></script>
<script src="~/Content/vendor/bootstrap/js/bootstrap.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#gonder").click(function () {
            var yorumunuz = $("#yorum").val();
            $.ajax({
                url: '/Home/YorumYap',
                data: { yorum: yorumunuz, makaleid:@Model.Makaleid},
                type: 'POST',
                dataType: 'json',
                success: function (data) {
                    alert("Başarılı yorum: " + yorumunuz);
                }
            });
        });
    });
</script>
<script type="text/javascript">
    $(document).ready(function () {
        $.ajax({
            url: '/Home/OkunmaArttir/',
            data: { makaleid:@Model.Makaleid},
            type: 'post'
        });
    })
</script>


